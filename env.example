# ============================================
# SurgiNote Full-Stack Environment Variables
# ============================================
# Copy this file to .env and configure values
# Usage: cp env.example .env  (or copy env.example .env on Windows)

# ============================================
# Security Configuration
# ============================================
# REQUIRED for production - generate a secure random key
# Example: openssl rand -hex 32
SECRET_KEY=change-me-to-a-secure-random-string-min-32-chars

# ============================================
# API Server Configuration
# ============================================
# Database connection (SQLite default, can be changed to PostgreSQL)
DATABASE_URL=sqlite:///./server_data/surginote.db

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3001,http://localhost:8081,http://127.0.0.1:3001,http://localhost:8001

# ============================================
# Frontend Client Configuration
# ============================================
# API endpoint for the frontend to connect to
VITE_API_URL=http://localhost:8001

# Application metadata
VITE_APP_NAME=SurgiNote
VITE_APP_VERSION=1.0.0

# Node environment: development, production, test
NODE_ENV=development

# ============================================
# Development-Only Variables
# ============================================
# Enable debug information in UI
VITE_DEV_MODE=true
VITE_SHOW_DEBUG_INFO=true

# ============================================
# Production-Only Variables
# ============================================
# These are used when running with docker-compose.prod.yml
# VITE_API_BASE_URL should point to your production API URL
# VITE_DEV_MODE=false
# VITE_SHOW_DEBUG_INFO=false


